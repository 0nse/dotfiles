conky.config = {
  own_window = false,
  out_to_x = false,
  out_to_console  = true,
  update_interval = 1.5,
  background = false,
  no_buffers = true,
  cpu_avg_samples = 2,
  mpd_host = localhost,
  mpd_port = 6600
}
conky.text=[[\
[\
{\
"full_text": "${freq_g}GHz ${acpitemp}°C",\
"min_width": 90,\
"align": "center",\
"color":\
${if_match ${acpitemp}>65}"\#DC322F"\
${else}"\#586E75"\
${endif}\
},\
{\
"full_text": "¹ ${cpu cpu1}% ² ${cpu cpu2}%",\
"min_width": 90,\
"align": "center",\
"color":\
${if_match ${cpu cpu1} > 65}"\#DC322F"\
${else}\
${if_match ${cpu cpu2} > 65}"\#DC322F"\
${else}"\#586E75"\
${endif}\
${endif}\
},\
{\
"full_text":\
${if_match ${swapperc} > 3}"${memperc}% ${swapperc}%"\
${else}"${memperc}%"\
${endif},\
"min_width": 40,\
"align": "center",\
"color":\
${if_match ${memperc} > 85}"\#DC322F"\
${else}"\#586E75"\
${endif}\
},\
{\
"full_text":\
${if_existing /proc/net/route enp2s0}\
" ${downspeed enp2s0} ${upspeed enp2s0}"\
${else}\
" ${downspeed wlp3s0b1} ${upspeed wlp3s0b1}"\
${endif},\
"min_width": 110,\
"align": "center",\
"color":\
${if_match ${downspeedf wlp3s0b1} > 300}"\#859900"\
${else}\
${if_match ${upspeedf wlp3s0b1} > 21}"\#DC322F"\
${else}"\#586E75"\
${endif}\
${endif}\
},\
{\
"full_text":\
${if_match "${mpd_status}" == "Playing"}"${mpd_smart} [${mpd_length}]"\
${else}""\
${endif},\
"align": "left",\
"color": "\#EEE8D5"\
},\
{\
"full_text":\
${if_match "${mpd_vol}" == "-1"}""\
${else}" ${exec amixer get Master | awk -F'[]%[]' '/%/ {if ($7 == "off") { print "Mute" } else { print $2"%" }}' | uniq | head -1}"\
${endif},\
"align": "center",\
"color": "\#586E75"\
},\
{\
"full_text":\
${if_existing /sys/class/power_supply/BAT1}\
${if_match ${battery_percent BAT1} > 15}\
${if_match ${battery_percent BAT1} > 40}\
${if_match ${battery_percent BAT1} > 65}\
${if_match ${battery_percent BAT1} > 90}" "\
${else}" "\
${endif}\
${else}" "\
${endif}\
${else}" "\
${endif}\
${else}" "\
${endif}\
${else}""\
${endif},\
"align": "center",\
"color":\
${if_match ${battery_percent BAT1} < 10}"\#EEE8D5",\
"background" : "\#DC322F"
${else}"\#EEE8D5"\
${endif}\
},\
{\
"full_text": "  ${time %a, %d. %b %k:%M}",\
"min_width": 120,\
"align": "center",\
"color": "\#586E75"\
}\
],\
]]
