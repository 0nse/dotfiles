bindcode  $SUPER+$DEAD_CIRCUMFLEX  workspace  back_and_forth
bindsym   $SUPER+Escape            workspace  back_and_forth

# move focused container to workspace
bindcode  $SUPER+Shift+$EXCLAM      move container to workspace  1
bindcode  $SUPER+Shift+$QUOTEDBL    move container to workspace  2
bindcode  $SUPER+Shift+$SECTION     move container to workspace  3
bindcode  $SUPER+Shift+$DOLLAR      move container to workspace  4
bindcode  $SUPER+Shift+$PERCENT     move container to workspace  5
bindcode  $SUPER+Shift+$AMPERSAND   move container to workspace  6
bindcode  $SUPER+Shift+$SLASH       move container to workspace  7
bindcode  $SUPER+Shift+$PARENLEFT   move container to workspace  8
bindcode  $SUPER+Shift+$PARENRIGHT  move container to workspace  9
bindcode  $SUPER+Shift+$EQUAL       move container to workspace  10

# reload the configuration file
bindsym $SUPER+Shift+C reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $SUPER+Shift+R restart
# exit i3 (logs you out of your X session)
bindsym $ALT+ctrl+Delete exit
# shutdown
bindsym $ALT+ctrl+End exec $SCRIPT_DIR/i3exit shutdown

# resize window (you can also use the mouse for that)
mode "resize" {
  # These bindings trigger as soon as you enter the resize mode

  # Pressing left will shrink the window‚Äôs width.
  # Pressing right will grow the window‚Äôs width.
  # Pressing up will shrink the window‚Äôs height.
  # Pressing down will grow the window‚Äôs height.
  bindsym  h  resize  shrink  width   10  px  or  10  ppt
  bindsym  j  resize  grow    height  10  px  or  10  ppt
  bindsym  k  resize  shrink  height  10  px  or  10  ppt
  bindsym  l  resize  grow    width   10  px  or  10  ppt

  # same bindings, but for the arrow keys
  bindsym  113  resize  shrink  width   10  px  or  10  ppt
  bindsym  116  resize  grow    height  10  px  or  10  ppt
  bindsym  111  resize  shrink  height  10  px  or  10  ppt
  bindsym  114  resize  grow    width   10  px  or  10  ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $SUPER+r mode "resize"
# lock
bindsym $ALT+ctrl+l exec $SCRIPT_DIR/i3lock-wrapper
# sleep
bindsym  XF86Sleep     exec  $SCRIPT_DIR/i3exit  suspend
bindsym  $CONTROL_R+Z  exec  $SCRIPT_DIR/i3exit  suspend

# caffeine and sleeping pill
bindsym  $CONTROL_R+minus  exec  --no-startup-id  $SCRIPT_DIR/caffeine.sh off
bindsym  $CONTROL_R+plus   exec  --no-startup-id  $SCRIPT_DIR/caffeine.sh on

