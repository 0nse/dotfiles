[user]
	name = 0nse
	email = 0nse@users.noreply.github.com
[credential]
	helper = cache --timeout=3600
[color]
	diff = auto
	status = auto
	branch = auto
[push]
	default = simple
[merge]
	tool = vimdiff
  conflictstyle = diff3
[mergetool "diffconflicts"]
	cmd = diffconflicts vim $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
	keepBackup = false
  prompt = false
