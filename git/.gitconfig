[user]
  name = 0nse
  email = 0nse@users.noreply.github.com
  signingkey = 1D1BB16F
[credential]
  helper = cache --timeout=3600
[color]
  diff = auto
  status = auto
  branch = auto
[push]
  default = simple
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool "diffconflicts"]
  cmd = diffconflicts vim $BASE $LOCAL $REMOTE $MERGED
  trustExitCode = true
  keepBackup = false
  prompt = false
[alias]
  commit = commit -S --verbose
  # git-number, see: https://github.com/holygeek/git-number
  a = number add
  ap = number add -p
  ba = branch -avv
  ci = number commit -S --verbose
  cia = number commit -a -S --verbose
  co = number checkout
  d = number diff
  f = fetch
  ld = log --pretty=format:%C(yellow)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn] --decorate --date=short --graph
  ll = log --pretty=format:%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn] --decorate --numstat
  ls = log --pretty=format:%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%cn] --decorate --date=relative
  ltag = "!git log --oneline --decorate=short | awk '/tag/ {print substr($3,0,(length($3)-1)) \"\\t\" $1 \"\\t\" ($1=$2=$3=\"\") $0}'"
  nrm = number rm
  p = push
  patch = --no-pager diff --no-color
  r = number reset
  rb = rebase
  redo = commit -s -c ORIG_HEAD
  sp = stash pop
  ss = stash save --include-untracked
  st = number -s
  undo = reset --soft 'HEAD^'
[pull]
	rebase = true
[rebase]
	autostash = true
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX --pattern '^(Date|added|deleted|modified): '
